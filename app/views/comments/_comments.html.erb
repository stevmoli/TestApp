
<% if @post.comments.first.present? %>
  <h3>Comments for this post:</h3>

  <table>
    <tr>
      <th>User</th>
      <th>Text</th>
    </tr>

    <% @post.comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.user, comment.user %><%= ": " %></td>
        <td><%= comment.body %></td>
      
        <td><%= link_to "Edit Comment", edit_post_comment_path(comment.post, comment) %></td>
        <td><%= link_to "Delete Comment", [comment.post, comment], method: :delete, data: {confirm: "Really delete this comment?"} %></td>
      </tr>
    <% end %>
  </table>

<% else %>
  <p> There are no comments for this post yet.</p>

<% end %>