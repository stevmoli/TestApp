<h1><%= @user %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>User</th>
  </tr>

  <% Post.where(user_id: @user.id).find_each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.text %></td>
      <td><%= post.user %></td>
      <td><%= link_to "Edit Post", edit_post_path(post)%></td>
      <td><%= link_to "Delete Post", post_path(post), method: :delete, data:{confirm:'Are you sure?'}%></td>
    </tr>
  <% end %>
</table>

<% if current_user %>
  <%= link_to "Delete My Account", user_path(@user), method: :delete, data:{confirm:'Are you sure you want to delete your account?  When you delete your account, all of your posts will be deleted as well.'}%>
<% end %>