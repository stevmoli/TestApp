<h1>Editing Post</h1>

<%= form_for :post, url: post_path(@post), method: :put do |f| %>
  <!-- want things here eventually, to deal with blank posts, etc. -->

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>