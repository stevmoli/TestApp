<h1>All Posts</h1>

<h3>Listing posts</h3>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>User</th>
  </tr>

  <% Post.all.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.text %></td>
      <td><%= link_to post.user, post.user %></td>
      <td><%= link_to "Edit Post", edit_post_path(post)%></td>
      <td><%= link_to "Delete Post", post_path(post), method: :delete, data:{confirm:'Are you sure?'}%></td>
    </tr>
  <% end %>
</table>
