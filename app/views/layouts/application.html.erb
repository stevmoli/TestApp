<!DOCTYPE html>
<html>
<head>
  <title>TestApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application", "jquery" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_nav" class="navbar-fixed">
  <nav>
    <div class="nav-wrapper">
      <% if current_user %>
        <% @user = current_user %>
        <a class="brand-logo"> <%= link_to "Home", root_path %> </a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li> <%= link_to "Log out", log_out_path %> </li>
          <li> <%= link_to "Create New Post", new_post_path %> </li>
          <li> <%= link_to "My Page", user_page_path(@user) %> </li>
          <li> <%= link_to "View All Posts", posts_path %> </li>
          <li> <%= link_to "View All Users", users_path %> </li>
          <li> Logged in as: <%= current_user.name %> <li>
        </ul>
      <% else %>
        <%= link_to "Home", root_path %>
        <%= link_to "Sign up", sign_up_path %> or
        <%= link_to "Log in", log_in_path %>
        <%= link_to "View All Posts", posts_path %>
        <%= link_to "View All Users", users_path %>
      <% end %>
    </div>
  </nav>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
